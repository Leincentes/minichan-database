{
    "name": "minichan-database/minichan-database",
    "description": "A minimal database helper.",
    "keywords": [
        "database", "database-library"
    ],
    "suggest": {
        "ext-pdo_sqlite": "For SQLite database",
        "ext-pdo_sqlsrv": "For MSSQL database",
        "ext-pdo_mysql": "For MySQL or MariaDB database"
    },
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Minichan\\": "lib/"
        }
    },
    "autoload-dev": {
        "Tests\\": "tests/"
    },
    "authors": [
        {
            "name": "Niel",
            "email": "leincentes@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev"
    },
    "scripts": {
        "test": "vendor/phpunit/phpunit/phpunit tests"
    }
}
